rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // YÖNETİCİ E-POSTASINI BURAYA YAZDIĞINIZDAN EMİN OLUN
    function isAdmin() {
      return request.auth != null && request.auth.token.email == "mehmeteminacan13@gmail.com"; 
    }

    match /users/{userId} {
      allow read, write: if isAdmin();
    }
  }
}
